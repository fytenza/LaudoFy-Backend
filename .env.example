PORT=3000
process.env.IMAGEMAGICK_BINARY = 'magick';
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Segurança
JWT_SECRET=sua_chave_secreta
JWT_EXPIRES_IN=5h
ENCRYPTION_KEY=sua_encription_key
TOKEN_BLACKLIST_TTL=seu_token_blacklist
JWT_REFRESH_SECRET=seu_jwt_refresh_secret
JWT_REFRESH_EXPIRE=7d
RECAPTCHA_SECRET_KEY=seu_recaptcha

# Sendgrid
SENDGRID_API_KEY=sua_chave_sendgrid
SENDGRID_FROM_EMAIL=seu_email
SENDGRID_FROM_NAME=seu_nome

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=14

# MongoDB
MONGO_URI=sua_uri
MONGO_TLS=false
MONGO_SSL_VALIDATE=true

# Socket.IO Admin UI
SOCKET_ADMIN_USER=admin
SOCKET_ADMIN_PASS=senha_segura

# Configurações Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

CRYPTO_SECRET=sua_crypto_secret